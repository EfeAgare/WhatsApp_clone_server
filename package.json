{
  "name": "whatsapp-clone-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "migrate": "ts-node ./src/db/tables.ts",
    "format": "prettier \"**/*.ts\" --write",
    "start:watch": "nodemon",
    "test": "NODE_ENV=test && yarn migrate && jest -u --runInBand --detectOpenHandles --forceExit",
    "prestart": "yarn codegen",
    "codegen": "graphql-codegen"
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.11.2",
    "@graphql-codegen/typescript": "^1.11.2",
    "@graphql-codegen/typescript-resolvers": "^1.11.2",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^13.13.4",
    "@types/pg": "^7.14.3",
    "apollo-server-testing": "^2.12.0",
    "jest": "^25.5.3",
    "jest-junit": "10.0.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@safe-api/middleware": "^0.0.2",
    "@types/cookie": "^0.3.3",
    "@types/cookie-parser": "^1.4.2",
    "apollo-datasource-rest": "^0.9.0",
    "apollo-server-express": "^2.12.0",
    "bcrypt": "^4.0.1",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-import": "^1.0.2",
    "graphql-postgres-subscriptions": "^1.0.5",
    "graphql-scalars": "^1.1.2",
    "graphql-tools": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.2.1",
    "sql-template-strings": "^2.2.2"
  }
}
